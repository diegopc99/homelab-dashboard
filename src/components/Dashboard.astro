---
import logo from '../assets/logo.png';
import { Image } from 'astro:assets';
import ServiceCards from './Cards.astro';
import "../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>HomeLab Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/logo.png" />
  </head>
  <body class="relative min-h-screen font-sans m-0 overflow-hidden bg-gradient-to-br from-slate-900 via-violet-900 to-purple-950">
    {/* Header */}
    <header class="relative z-10 bg-white/5 backdrop-blur-md border-b border-white/10">
      <div class="max-w-7xl mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-4">
            <Image src={logo} alt="HomeLab Logo" class="h-12 w-auto drop-shadow-lg"/>
            <div>
              <h1 class="text-2xl font-bold text-white tracking-tight" style="font-family: 'DistantGalaxy', sans-serif;">
                HomeLab Dashboard
              </h1>
              <p class="text-violet-300 text-sm">Infrastructure Management</p>
            </div>
          </div>
          <div class="flex items-center gap-4 relative">
            <a
              href="https://github.com/diegopc99"
              target="_blank"
              rel="noopener"
              class="ml-2"
              aria-label="GitHub"
            >
              <img src="/github-logo.svg" alt="GitHub" class="w-7 h-7 hover:opacity-80 transition-opacity" />
            </a>
            <a
              href="https://www.linkedin.com/in/diego-prieto-carrete"
              target="_blank"
              rel="noopener"
              class="ml-2"
              aria-label="LinkedIn"
            >
              <img src="/linkedin-logo.svg" alt="LinkedIn" class="bg-white rounded-md w-7 h-7 hover:opacity-80 transition-opacity" />
            </a>
            <a
              href="https://gmail.com"
              target="_blank"
              rel="noopener"
              class="ml-2"
              aria-label="Gmail"
            >
              <img src="/gmail-logo.svg" alt="Gmail" class="w-7 h-7 hover:opacity-80 transition-opacity" />
            </a>
          </div>
        </div>
      </div>
    </header>

    {/* Main Content */}
    <main class="relative z-10 px-6 py-8">
      <div class="max-w-7xl mx-auto">
        <div class="mb-8">
          <h2 class="text-3xl font-bold text-white mb-2">Infrastructure Services</h2>
          <p class="text-violet-300">Monitor and manage your homelab infrastructure</p>
        </div>
        <ServiceCards />
      </div>
    </main>
  </body>
</html>