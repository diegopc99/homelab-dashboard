---
import { services } from '../data/services.js';
import { Image } from 'astro:assets';
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
  {services.map(service => (
    <a
      class="group bg-white/10 backdrop-blur-md rounded-xl border border-white/20 p-6 text-center transition-all duration-300 hover:bg-white/15 hover:border-violet-400/50 hover:scale-105 hover:shadow-2xl hover:shadow-violet-500/20 text-inherit no-underline"
      href={service.href}
      target="_blank"
      rel="noopener"
    >
      <div class="w-12 h-12 mx-auto mb-4 group-hover:scale-110 transition-transform duration-300">
        <Image src={service.logo} alt={service.name + " Logo"} class="w-full h-full"/>
      </div>
      <h3 class="font-bold text-lg text-white mb-2">{service.name}</h3>
      <p class="text-violet-300 text-sm mb-3">{service.description}</p>
      <span class={`inline-flex items-center text-xs px-2 py-1 rounded-full ${service.tagClass}`}>
        {service.tag}
      </span>
    </a>
  ))}
</div>